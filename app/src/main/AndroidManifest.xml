<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.start3a.memoji">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name="com.start3a.memoji.MemoApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon_memo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.start3a.memoji.views.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.start3a.memoji.views.EditMemo.Image.ImageViewActivity" />
        <activity
            android:name="com.start3a.memoji.views.EditMemo.EditMemoActivity"
            android:launchMode="singleTask"
            android:label="@string/title_activity_edit_memo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.start3a.memoji.views.MemoList.MemoListActivity"
            android:label="@string/title_activity_memo_list"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver android:name=".MemoAlarmTool" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.start3a.memoji.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>